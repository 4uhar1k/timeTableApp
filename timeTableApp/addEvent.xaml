<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="timeTableApp.addEvent"
             Title="addEvent">
    <VerticalStackLayout>
        <Editor Placeholder="Please enter the name..."  Text="{Binding Name}"  HeightRequest="60" Margin="0,50,0,0" FontSize="25"></Editor>
        <Editor Placeholder="Please enter the description..." Text="{Binding Description}" HeightRequest="60" Margin="0,50,0,0" FontSize="25"></Editor>
        <Editor Placeholder="Please enter the description..." Text="{Binding Day}" HeightRequest="60" Margin="0,50,0,0" FontSize="25"></Editor>
        <Editor Placeholder="Please enter the time..." Text="{Binding Time}" HeightRequest="60" Margin="0,50,0,0" FontSize="25"></Editor>
        <Button Text="Add" Command="{Binding AddCommand}" Clicked="goBack"></Button>
    </VerticalStackLayout>
</ContentPage>