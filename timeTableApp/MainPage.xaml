<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="timeTableApp.MainPage"
             xmlns:local ="clr-namespace:timeTableApp">

    
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25"
            >
            <CollectionView ItemsSource="{Binding Events}" HeightRequest="500" BackgroundColor="Black" >
            
            <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout Margin="8">
                        <Label Text="{Binding name}" FontSize="24" TextColor="White" />
                        <Label Text="{Binding description}" FontSize="24" TextColor="White"/>
                        <Label Text="{Binding time}" FontSize="24" TextColor="White"/>
                        <Label Text="{Binding category}" FontSize="24" TextColor="White"/>
                    </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
               
                
            </CollectionView>
        <Button Text="Add Event" HeightRequest="200" WidthRequest="100" Clicked="OnCounterClicked"></Button>
        
        
        </VerticalStackLayout>
   

</ContentPage>
