                                        <Label Grid.Row="0" Grid.Column="0"  Text="{Binding Time}" FontSize="20" TextColor="Black"/>
                                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding EventCategory.CategoryName}" FontSize="15" TextColor="Red"/>
                                        <Button Grid.Row="0" Grid.Column="2" Command="{Binding DeleteCommand}" CommandParameter="{Binding Source={x:Reference Name=tuesdayCol}, Path=SelectedItem}" Padding="-50" Margin="-40,0,0,0" Text="-" BackgroundColor="Red" TextColor="White" FontSize="20"  HeightRequest="30" WidthRequest="70"/>
                                    </Grid>
